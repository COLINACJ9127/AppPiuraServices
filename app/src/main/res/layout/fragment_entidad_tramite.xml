<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe3e3e3"
    tools:context=".views.fragments.EntidadTramiteFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_entidad_tramite"
            android:textAlignment="center"
            android:textColor="@color/color_movistar_card"
            android:textSize="18dp"
             />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/color_movistar_card" />
        <RadioGroup
            android:id="@+id/radio_group_entdades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin">

            <RadioButton
                android:id="@+id/rb_epsgrau_entidad_tramite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entidad EPS Grau SA"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_enosa_entidad_tramite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entidad  Enosa"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_empresa_telefonia_trammite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empresa Movistar"
                android:textSize="20dp" />
            <RadioButton
                android:id="@+id/rb_empresa_Claro_tramite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empresa Claro"
                android:textSize="20dp" />

            <RadioButton
                android:id="@+id/rb_empresa_entel_trammite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empresa Entel"
                android:textSize="20dp" />
        </RadioGroup>

        <Button
            android:id="@+id/btn_entidad_siguiente_tramite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:textColor="@color/color_text_boton_login"
            android:theme="@style/RaisedButtonDark"
            android:text="Siguiente" />
    </LinearLayout>


</FrameLayout>