<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffe3e3e3"
    tools:context=".views.activitiestelefonia.claro.InfoClaroActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:background="#949494"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="1"
                    android:padding="6dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_direccion" />
                        <TextView
                            android:id="@+id/tv_direccion_claro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_direccion_claro" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenGoogleMaps"
                            android:src="@drawable/ic_place_black_24dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_telefono" />
                        <TextView
                            android:id="@+id/tv_telefono_claro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenCall"
                            android:text="@string/text_telefono_claro"/>
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenCall"
                            android:src="@drawable/ic_local_phone_black_24dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:padding="4dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_correo" />
                        <TextView
                            android:id="@+id/tv_email_claro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenEmail"
                            android:text="@string/text_correo_claro" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenEmail"
                            android:src="@drawable/ic_email_black_24dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:padding="4dp"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="@string/text_view_horario" />
                        <TextView
                            android:id="@+id/tv_horario_claro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenWeb"
                            android:text="@string/text_horario_claro" />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenWeb"
                            android:src="@drawable/ic_clock_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/text_view_pagina" />

                        <TextView
                            android:id="@+id/tv_web_claro"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenWeb"
                            android:text="@string/text_web_claro" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="onClickOpenWeb"
                            android:src="@drawable/ic_web_24dp" />
                    </LinearLayout>

                </GridLayout>
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/text_view_informacion"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#ffe3e3e3"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:background="#949494"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <ImageView
                    android:id="@+id/img_tramitesclaro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="onClickedtramites"
                    android:scaleType="centerCrop" />
                <GridLayout
                    android:padding="6dp"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="2dp"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_info_tramites" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    </LinearLayout>

                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_nombre_tramite" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_pasos_tramites" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_pasos_mas_info" />
                </GridLayout>

                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/text_view_tramites"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#ffe3e3e3"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_telefonia"
                android:background="#949494"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true" >
                <ImageView
                    android:id="@+id/img_reclamosclaro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:onClick="onClickedreclamos"
                    android:scaleType="centerCrop" />
                <GridLayout
                    android:padding="6dp"
                    android:columnCount="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:gravity="center"
                        android:textSize="12dp"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_info_tramites" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_nombre_reclamo" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_pasos_reclamos" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimary" />
                    <TextView
                        android:padding="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_view_pasos_mas_info" />
                </GridLayout>

                <TextView
                    android:id="@+id/txt24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/text_view_reclamos"
                    android:layout_gravity="bottom"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#ffe3e3e3"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>