<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe3e3e3"
    tools:context=".views.fragments.EntidadesFragment">
    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/card1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true" >
                <ImageView
                    android:clickable="true"
                    android:onClick="onClicked"
                    android:id="@+id/img_epsgrau"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/epsgrau"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="EPS GRAU,Servicio de agua"
                    android:layout_gravity="bottom"
                    android:background="#9e000000"
                    android:textColor="#ffe3e3e3"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true" >

                <ImageView
                    android:clickable="true"
                    android:onClick="onClicked"
                    android:id="@+id/img_enosa"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/enosa" />
                <TextView
                    android:id="@+id/txt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="ENOSA, Servicio de luz"
                    android:layout_gravity="bottom"
                    android:background="#9e000000"
                    android:textColor="#ffe3e3e3"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/card_telefonia"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true" >
                <ImageView
                    android:clickable="true"
                    android:onClick="onClicked"
                    android:id="@+id/img_telefonia"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/telefonia"
                    android:scaleType="centerCrop"/>
                <TextView

                    android:id="@+id/txt24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Telefonia"
                    android:layout_gravity="bottom"
                    android:background="#8c000000"
                    android:textColor="#ffe3e3e3"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>